<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/imagen_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/imagen_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MonitorizacionDeDispositivos"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MonitorizacionDeDispositivos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicDeviceActivity"
            android:exported="true">
            <!-- ... -->
        </activity>
        <activity
            android:name=".DevicesActivity"
            android:exported="false"
            android:label="@string/devices_title"/>
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />
        <!-- ConfiguraciÃ³n de Google Sign-In -->
        <meta-data
            android:name="com.google.android.gms.auth.api.credentials.CLIENT_ID"
            android:value="@string/default_web_client_id" />
    </application>

</manifest>
